{
  "name": "obsidian-card-view-explorer",
  "version": "1.0.0",
  "description": "A card-based interface for browsing recently edited notes in Obsidian",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "check": "tsc --noEmit",
    "lint": "biome lint src",
    "format": "biome format --write src",
    "check-all": "biome check src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "notes",
    "cards",
    "explorer"
  ],
  "author": "Hiroaki Suzuki",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.1.1",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitest/coverage-v8": "^3.2.4",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.19.8",
    "jsdom": "^23.0.1",
    "obsidian": "latest",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "es-toolkit": "^1.39.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtuoso": "^4.6.2",
    "tslib": "^2.8.1",
    "zustand": "^4.4.7"
  }
}
